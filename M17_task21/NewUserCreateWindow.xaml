<Window x:Class="M17_task21.NewUserCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M17_task21"
        mc:Ignorable="d"
        Title="NewUserCreateWindow" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock>Login:</TextBlock>
            <TextBox Text="{Binding NewLogin}"/>
            <TextBlock>Parole:</TextBlock>
            <TextBox Text="{Binding NewPassword}"/>
            <TextBlock>Role:</TextBlock>
            <Button Content="Create Seller" Command="{Binding MakeNewSeller}"/>
            <Button Content="Create Manager" Command="{Binding MakeNewManager}"/>


        </StackPanel>
        
        

    </Grid>
</Window>
