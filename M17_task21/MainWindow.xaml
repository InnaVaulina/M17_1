<Window x:Class="M17_task21.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M17_task21"
        mc:Ignorable="d"
        Title="Авторизация" MaxHeight="170" MaxWidth="340">
    <Grid>
        <Border Margin="10,10,10,10">
            <StackPanel Margin="0,0,0,0">
                <TextBlock Height="20">Логин:</TextBlock>
                <TextBox x:Name="login" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20" Width="300"/>
                <TextBlock Height="20">Пароль:</TextBlock>
                <PasswordBox x:Name="password" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top" Width="300"/>
                <Button Content="Войти" 
                        Width="50" 
                        Height="20" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top" 
                        Margin="10,10,10,10"
                        Click="Button_Click" />
                <!--
            <DataGrid Name="dataShow" Height="Auto" Width="Auto"
                      ItemsSource="{Binding}">

            </DataGrid>
            -->
            </StackPanel>
        </Border>
        
        
        
    </Grid>
</Window>
